[32m+[m
[32m+[m[32m@Service[m
[32m+[m[32m@Transactional(readOnly = true)[m
 public class BoothService {[m
 [m
[32m+[m[32m    private final BoothRepository boothRepository;[m
[32m+[m[32m    private final BoothWaitRepository boothWaitRepository;[m
[32m+[m[32m    private final BoothCongestionQueryRepository boothCongestionQueryRepository;[m
[32m+[m
[32m+[m[32m    public BoothService([m
[32m+[m[32m            BoothRepository boothRepository,[m
[32m+[m[32m            BoothWaitRepository boothWaitRepository,[m
[32m+[m[32m            BoothCongestionQueryRepository boothCongestionQueryRepository[m
[32m+[m[32m    ) {[m
[32m+[m[32m        this.boothRepository = boothRepository;[m
[32m+[m[32m        this.boothWaitRepository = boothWaitRepository;[m
[32m+[m[32m        this.boothCongestionQueryRepository = boothCongestionQueryRepository;[m
[32m+[m[32m    }[m
[32m+[m
[32m+[m[32m    /** ÌñâÏÇ¨ Î∂ÄÏä§ Î™©Î°ù Ï°∞Ìöå(ÏÉÅÌÉú/Ï°¥ ÌïÑÌÑ∞ + ÌéòÏù¥Ïßï) */[m
[32m+[m[32m    public Page<BoothResponse> getEventBooths(Long eventId, BoothZone zone, BoothStatus status, Pageable pageable) {[m
[32m+[m[32m        return boothRepository.findEventBooths(eventId, zone, status, pageable)[m
[32m+[m[32m                .map(BoothResponse::from);[m
[32m+[m[32m    }[m
[32m+[m
[32m+[m[32m    /** Î∂ÄÏä§ ÏÉÅÏÑ∏ Ï°∞Ìöå(ÎåÄÍ∏∞/ÌòºÏû° Ìè¨Ìï®) */[m
[32m+[m[32m    public BoothResponse getBoothDetail(Long boothId) {[m
[32m+[m[32m        Booth booth = boothRepository.findById(boothId)[m
[32m+[m[32m                .orElseThrow(() -> new BusinessException(ErrorCode.BOOTH_NOT_FOUND));[m
[32m+[m
[32m+[m[32m        BoothResponse res = BoothResponse.from(booth);[m
[32m+[m
[32m+[m[32m        res.wait = boothWaitRepository.findByBoothId(boothId)[m
[32m+[m[32m                .map(BoothWaitResponse::from)[m
[32m+[m[32m                .orElse(null);[m
[32m+[m
[32m+[m[32m        res.congestion = boothCongestionQueryRepository.findLatestByBoothId(boothId)[m
[32m+[m[32m                .orElse(null);[m
[32m+[m
[32m+[m[32m        return res;[m
[32m+[m[32m    }[m
